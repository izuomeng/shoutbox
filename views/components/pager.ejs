<nav aria-label="Page navigation" class="my_pager">
    <ul class="pagination">
        <% if (page.count > 1) { %>
            <% if (page.number) { %>
                <li>
                    <a href="/?page=<%= page.number %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            <% } else { %>
                <li>
                    <span aria-hidden="true">&laquo;</span>
                </li>
            <% } %>
            <li class="active">
                <span><%= page.number + 1 %><span class="sr-only">(current)</span></span>
            </li>
            <% if (page.number < page.count - 1) { %>
                <li>
                    <a href="/?page=<%= page.number + 2 %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            <% } else { %>
                <li>
                    <span aria-hidden="true">&raquo;</span>
                </li>
            <% } %>
        <% } %>
    </ul>
</nav>